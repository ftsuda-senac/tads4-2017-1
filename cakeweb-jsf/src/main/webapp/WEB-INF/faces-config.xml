<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
	      xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	      xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

  <application>
    <locale-config>
      <default-locale>en-US</default-locale>
      <supported-locale>pt-BR</supported-locale>
    </locale-config>
    <resource-bundle>
      <!-- CAMINHO COMPLETO DO PACOTE + prefixo do nome do arquivo sem localidade -->
      <base-name>br.senac.tads4.cakeweb.mensagens</base-name>
      <!-- NOME DA VARIAVEL USADO NAS TELAS -->
      <var>msgs</var>
    </resource-bundle>
  </application>
  
  <lifecycle>
    <phase-listener>
      br.senac.tads4.cakeweb.listener.AutorizacaoListener
    </phase-listener>
  </lifecycle>
</faces-config>
